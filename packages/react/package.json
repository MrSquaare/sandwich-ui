{
  "name": "@sandwich-ui/react",
  "version": "0.4.5",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./panda.buildinfo.json": "./dist/panda.buildinfo.json",
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "predev": "panda codegen",
    "dev": "conc \"vite build --watch\" \"panda ship -o dist/panda.buildinfo.json --watch\" \"panda cssgen -o dist/style.css --watch\"",
    "prebuild": "del-cli dist/ && panda codegen",
    "build": "tsc && conc \"vite build\" \"panda ship -o dist/panda.buildinfo.json\" \"panda cssgen -o dist/style.css\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "del-cli dist/ node_modules/.cache/"
  },
  "dependencies": {
    "@ark-ui/react": "^5.9.0",
    "@sandwich-ui/core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.53.6",
    "@sandwich-ui/eslint-config": "workspace:*",
    "@sandwich-ui/eslint-config-react": "workspace:*",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "del-cli": "^6.0.0",
    "eslint": "^9.26.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3"
  }
}
