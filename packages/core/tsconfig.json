{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "paths": {
      "@sandwich-ui/core/css": ["./styled-system/css"],
      "@sandwich-ui/core/patterns": ["./styled-system/patterns"],
      "@sandwich-ui/core/recipes": ["./styled-system/recipes"],
      "@sandwich-ui/core/tokens": ["./styled-system/tokens"],
      "@sandwich-ui/core/types": ["./styled-system/types"],
      "@sandwich-ui/core/preset": ["./src/preset"],
    }
  },
  "include": ["src"]
}
