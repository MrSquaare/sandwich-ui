{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/",
        ".astro/",
        "storybook-static/",
        "node_modules/.cache/"
      ]
    },
    "preview": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "clean": {
      "cache": false,
      "outputs": [
        "dist/",
        "build",
        ".docusaurus/",
        "storybook-static/",
        "node_modules/.cache/"
      ]
    }
  }
}
